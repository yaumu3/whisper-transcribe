{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "whisper-transcribe",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "window": {
        "close": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.yaumu3.whisper-transcribe",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "whisper-transcribe",
        "width": 400,
        "height": 512,
        "minWidth": 400,
        "minHeight": 512
      }
    ]
  }
}
